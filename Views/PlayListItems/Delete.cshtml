@model SQMS.Models.tblPlayListItem

@{
    ViewBag.Title = "Playlist Item Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Play List > @Model.playlist_name> Item > Delete</h4>

        <div class="col-lg-offset-3 col-md-6">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="dl-horizontal">
                <dt>
                    File Name
                </dt>

                <dd>
                    @Model.file_name
                </dd>

                <dt>
                    File Type
                </dt>

                <dd>
                    @Model.file_type
                </dd>
                <dt>
                    Duration In Second
                </dt>

                <dd>
                    @Model.duration_in_second
                </dd>
                <dt>
                    Sort Order
                </dt>

                <dd>
                    @Model.sort_order
                </dd>
            </dl>

            <form asp-action="Delete" asp-controller="PlayListItems" method="post">
                <div class="col-lg-offset-1 form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" />
                    <a asp-action="Index" asp-route-playlist_id="@Model.playlist_id" class="btn btn-color">Back to List</a>
                </div>
                <input type="hidden" asp-for="playlistitem_id" />
                <input type="hidden" asp-for="playlist_id" />
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

<br />

