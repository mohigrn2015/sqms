@model SQMS.Models.tblCounter

@{
    ViewBag.Title = "Counter Info Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Counter > Edit</h4>

        <form asp-controller="Counters" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="counter_id" />
                <input type="hidden" asp-for="is_active" />
                <div class="form-group">
                    <label class="control-label col-md-2">Branch Name</label>
                    <div class="col-md-4">
                        @* <select class="form-control" name="branch_id" id="branch_id" required>
                            @foreach (var item in ViewBag.branch_id)
                            {
                                <option value="@item.branch_id">@item.branch_name</option>
                            }
                        </select> *@
                        @Html.DropDownList("branch_id", null, htmlAttributes: new { @class = "form-control" })

                        <span asp-validation-for="branch_id" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Counter No</label>
                    <div class="col-md-4">
                        <input asp-for="counter_no" class="form-control" />
                        <span asp-validation-for="counter_no" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Location</label>
                    <div class="col-md-4">
                        <input asp-for="location" class="form-control" />
                        <span asp-validation-for="location" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Save" class="btn btn-color" />
                        <button class="btn btn-color">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>