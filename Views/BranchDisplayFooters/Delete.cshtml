@model SQMS.Models.ViewModels.VMBranchDisplayFooter

@{
    ViewBag.Title = "Branch Display Footer Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Branch Display Footer > Delete</h4>
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Branch")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.branch_name)
                </dd>

                <dt>
                    @Html.DisplayName("Content (English)")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.content_en)
                </dd>

                <dt>
                    @Html.DisplayName("Content (Bangla)")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.content_bn)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-color" /> |
                <a href='@Url.Action("Index")'>
                    <button class="btn btn-color">Back to List</button>
                </a>
            </div>
            }
        </div>
        <br />
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>