@model SQMS.Models.tblDisplayFooter

@{
    ViewBag.Title = "Display Footer Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Display Footer > Edit</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.display_footer_id)
                @Html.HiddenFor(model => model.is_global)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.content_en, 3, 20, new { @class = "form-control Next", @row = "3", @placeholder = "Content (English)" })
                        @Html.ValidationMessageFor(model => model.content_en, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.content_bn, 3, 20, new { @class = "form-control Next", @row = "3", @placeholder = "Content (Bangla)" })
                        @Html.ValidationMessageFor(model => model.content_bn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="Save" class="btn btn-color" />
                        <button class="btn btn-color">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>
