
@{
    ViewBag.Title = "AgentLogSummaryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Agent Log Summary</h4>
        <div class="col-md-12">
            <div class="col-md-6">
                <table class="table table-striped table-bordered" style="font-weight: bold">
                    <tr>
                        <td>Branch</td>
                        <td>
                            <select name="branch_id" class="form-control" id="branch_id" required>
                                <option value="0">All Branches</option>
                                @* @if (!String.IsNullOrEmpty(ViewBag.branch_id))
                                { *@
                                    @foreach (var item in ViewBag.branch_id)
                                    {
                                        <option value="@item.branch_id">@item.branch_name</option>
                                    }
                                @* } *@
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Select User</td>
                        <td>
                            @* <input type="text" class="form-control" id="txtCounter" name="txtName" />*@
                            <select name="txtUser" class="form-control" required id="txtUser"></select>
                            @*<input type="hidden" name="SelectedName" id="SelectedName" />*@
                        </td>
                    </tr>
                    <tr>
                        <td>Counter</td>
                        <td>
                            <select name="txtCounter" class="form-control" required id="txtCounter"></select>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-striped table-bordered" style="font-weight: bold">
                    <tr>
                        <td>From Date</td>
                        <td>
                            <input type="date" class="form-control" id="txtFromDate" />
                        </td>
                    </tr>
                    <tr>
                        <td>To Date</td>
                        <td>
                            <input type="date" class="form-control" id="txtToDate" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="padding-bottom: 15px;">
            <table class="pull-right">
                <tr>
                    <td>
                        <input type="button" value="Local Report" style="width:130px;" onclick="GenerateBranchListReport()" class="btn btn-lg btn-color" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @if (!String.IsNullOrEmpty(@ViewBag.ErrorMessage))
    {
        <h4 style="color:orangered"> Error Message: @ViewBag.ErrorMessage</h4>
    }
</div>
<div id="dialog-report" title="Information">
</div>

@section scripts{
    <script src="~/Scripts/modal/modal-V8.0.js"></script>
    <script src="~/Scripts/sqms/report.js"></script>
}


