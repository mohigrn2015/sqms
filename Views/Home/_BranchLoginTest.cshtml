@using SQMS.Models
@model BranchLoginModel
@{
    ViewData["Title"] = "Branch Log in";
}

@{
    ViewData["Title"] = "Log in";
}
<style type="text/css">
    .bgimg {
        background-image: url('../Content/queue.jpg');
    }
</style>

<div class="container">

    <h2>Branch User</h2>
    <div class="row bgimg">
        <div class="col-lg-offset-4 col-lg-4">
            <section id="loginForm">
                <form asp-controller="TokenQueues" asp-action="Index" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Branch Name</label>
                        <div class="col-md-10">
                            <select asp-for="branch_id" asp-items="@(new SelectList(ViewBag.branchList, "branch_id", "branch_name"))" class="form-control" id="branch_name" required>
                                <option value="">Select a Branch</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Counter No</label>
                        <div class="col-md-10">
                            <select asp-for="counter_id" class="form-control" required id="counter_no"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="GO" class="btn btn-success" />
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/sqms/branch-login.js"></script>
}
