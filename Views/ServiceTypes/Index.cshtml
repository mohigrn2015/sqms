@model IEnumerable<SQMS.Models.tblServiceType>
@{
    ViewBag.Title = "Service Type List";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Service Type > List</h4>
        <a asp-controller="ServiceTypes" asp-action="Create" class="btn btn-color" style="margin-bottom: 10px;">Create New Service Type</a>
        <div class="col-md-12 scrollbar table-scroll">
            <table class="table table-hover table-bordered" id="data">
                <thead>
                    <tr id="Hedding">
                        <th>Service Type ID</th>
                        <th>Service Type Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.service_type_id</td>
                            <td>@item.service_type_name</td>
                            <td>
                                <a asp-action="Edit" asp-controller="ServiceTypes" asp-route-id="@item.service_type_id" class="btn btn-color">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
    </div>



