@model SQMS.Models.tblServiceType

@{
    ViewData["Title"] = "Service Type Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Service Type > Delete</h4>
        <hr />
        <div class="col-lg-offset-3 col-md-6">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="dl-horizontal">
                <dt>
                    Service Type Name
                </dt>
                <dd>
                    @Model.service_type_name
                </dd>
            </dl>

            <form asp-action="Delete" asp-controller="ServiceTypes" method="post">
                <input type="hidden" asp-for="service_type_id" />
                @Html.AntiForgeryToken()

                <div class="col-lg-offset-1 form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" />
                    <a asp-action="Index" asp-controller="ServiceTypes" class="btn btn-color">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
