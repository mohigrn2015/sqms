@model SQMS.Models.tblPlayList
@{
    ViewBag.Title = "Play List Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Play List > Delete</h4>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    National?
                </dt>
                <dd>
                    @if (Model.is_global > 0)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>
                <dt>
                    Playlist Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.playlist_name)
                </dd>
            </dl>
            <form asp-action="Delete" asp-controller="PlayLists" method="post">
                <input type="hidden" asp-for="playlist_id" />
                <input type="hidden" asp-for="is_global" />
                <div class="form-actions no-color">
                    <button type="submit" class="btn btn-color">Delete</button> |
                    <a asp-action="Index" class="btn btn-color">Back to List</a>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
        <br />
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>
