@model SQMS.Models.tblPlayList
@{
    ViewBag.Title = "Play List Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Play List > Edit</h4>

        <form asp-action="Edit" asp-controller="PlayLists" method="post">
            <input type="hidden" asp-for="playlist_id" />
            <input type="hidden" asp-for="is_global" />

            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="col-md-8">
                        <input asp-for="playlist_name" class="form-control Next" placeholder="Playlist Name" />
                        <span asp-validation-for="playlist_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <button type="submit" class="btn btn-color">Save</button>
                        <a asp-action="Index" class="btn btn-color">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>

