@model SQMS.Models.tblLogoutType
@{
    ViewBag.Title = "Logout Type Delete";
}


<div class="container">
    <div class="row">
        <h4 class="page-head-line">Logout > Delete</h4>
        <hr />
        <div class="col-lg-offset-3 col-md-6">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="dl-horizontal">               

                <dt>
                    @Html.DisplayNameFor(model => model.logout_type_name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.logout_type_name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.has_free_text)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.bool_has_free_text)
                </dd>

                
                <dt>
                    @Html.DisplayNameFor(model => model.is_active)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.bool_is_active)
                </dd>

            </dl>

            <form asp-controller="LogoutTypes" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" value="logout_type_id" />
                <div class="col-lg-offset-1 form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" />
                    <a asp-action="Index" class="btn btn-color">Back to List</a>
                </div>
            </form>
        </div>
</div>
</div>
