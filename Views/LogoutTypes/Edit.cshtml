@model SQMS.Models.tblLogoutType
@{
    ViewBag.Title = "Logout Type Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Logout Type > Edit</h4>
        <form asp-controller="LogoutTypes" asp-action="Edit" method="post">
            <input type="hidden" asp-for="logout_type_id" />

            <div class="form-horizontal">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <div class="col-md-8">
                        <input asp-for="logout_type_name" class="form-control" placeholder="Logout Type Name" />
                        <span asp-validation-for="logout_type_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.bool_has_free_text, new { htmlAttributes = new { @class = "form-control" } }) Free Text?
                        @* <input asp-for="bool_has_free_text" class="form-control" /> Free Text? *@
                        <span asp-validation-for="bool_has_free_text" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.bool_is_active, new { htmlAttributes = new { @class = "form-control" } }) Is Active?
                        @* <input asp-for="bool_is_active" class="form-control" /> Is Active? *@
                        <span asp-validation-for="bool_is_active" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <button type="submit" class="btn btn-color">Save</button>
                        <a asp-action="Index" class="btn btn-color">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

