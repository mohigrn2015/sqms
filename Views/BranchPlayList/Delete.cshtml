@model SQMS.Models.ViewModels.VMBranchPlayList

@{
    ViewBag.Title = "Branch Playlist Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Branch Playlist > Delete</h4>
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Branch")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.branch_name)
                </dd>

                <dt>
                    @Html.DisplayName("Playlist")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.playlist_name)
                </dd>

            </dl>
            <form asp-controller="BranchPlayList" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" /> |
                    <button class="btn btn-color">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            </form>
        </div>
        <br />
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout-2.3.0.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>