@model SQMS.Models.ViewModels.VMBranchPlayList
@{
    ViewBag.Title = "Display Footer Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Branch Playlist > Edit</h4>

        <form asp-controller="BranchPlayList" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.branch_playlist_id)
                @Html.HiddenFor(model => model.branch_id)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-8">
                        Branch: @Html.TextBoxFor(m => m.branch_name, new { @disabled = "disabled", @class = "form-control Next" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8">
                        <select name="playlist_id" class="form-control" id="playlist_id">
                            <option value="">Select One Content</option>
                            @foreach (var item in ViewBag.playlist_id)
                            {
                                <option value="@item.playlist_id">@item.playlist_name</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.playlist_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="Save" class="btn btn-color" />
                        <button class="btn btn-color">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout-2.3.0.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>