@model SQMS.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Security > Reset password</h4>
        <div class="col-md-7">
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <input type="hidden" asp-for="Code" />

                <div class="form-group">
                    <div class="col-md-5">
                        <label asp-for="UserName" class="control-label"></label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="UserName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label asp-for="Password" class="control-label"></label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5"></div>
                    <div class="col-md-7">
                        <button type="submit" class="btn btn-color">Reset</button>
                        <a asp-controller="BranchUsers" asp-action="Index" class="btn btn-color">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
