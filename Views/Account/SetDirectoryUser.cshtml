@model SQMS.Models.ActiveDirectoryTransferViewModel
@{
    ViewData["Title"] = "Active Directory Transfer";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Security > Active Directory Transfer</h4>
        <div class="col-md-7">
            <form asp-controller="Account" asp-action="SetDirectoryUser" method="post" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <input type="hidden" asp-for="Code" />
                <input type="hidden" asp-for="is_active_directory_user" />

                <div class="form-group">
                    <div class="col-md-5">
                        <label asp-for="UserName" class="control-label"></label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="UserName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                @if (Model.is_active_directory_user > 0)
                {
                    <input type="hidden" asp-for="Password" />
                    <input type="hidden" asp-for="ConfirmPassword" />
                }
                else
                {
                    <div class="form-group">
                        <div class="col-md-5">
                            <label asp-for="Password" class="control-label"></label>
                        </div>
                        <div class="col-md-7">
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                        </div>
                        <div class="col-md-7">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-md-5"></div>
                    <div class="col-md-7">
                        <button type="submit" class="btn btn-color">Transfer Now</button>
                        <a asp-controller="BranchUsers" asp-action="Index" class="btn btn-color">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
