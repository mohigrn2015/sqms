@using SQMS.Utility
@model SQMS.Models.EditUserViewModel
@{
    ViewData["Title"] = "User Information Edit";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Security > User Information Edit</h4>
        <div class="col-md-7">
            <form asp-controller="Account" asp-action="EditUser" method="post" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <input type="hidden" asp-for="userBranchId" />
                <input type="hidden" asp-for="transfer_by" />
                <input type="hidden" asp-for="user_id" />

                <div class="form-group">
                    <label asp-for="UserName" class="col-md-5 control-label"></label>
                    <div class="col-md-7">
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Hometown" class="col-md-5 control-label"></label>
                    <div class="col-md-7">
                        <input asp-for="Hometown" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Mobile" class="col-md-5 control-label"></label>
                    <div class="col-md-7">
                        <input asp-for="Mobile" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-5 control-label"></label>
                    <div class="col-md-7">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                @if (Model.user_role == "Service Holder")
                {
                    <div class="form-group">
                        <label asp-for="branch_id" class="col-md-5 control-label"></label>
                        <div class="col-md-7">
                            <select name="branch_id" class="form-control" id="branch_id" required>
                                <option value="0">Select Branch</option>
                                @foreach (var item in ViewBag.branch_id)
                                {
                                    <option value="@item.branch_id">@item.branch_name</option>
                                }
                            </select>
                            <span asp-validation-for="branch_id" class="text-danger"></span>
                        </div>
                    </div>
                }

                <div class="form-group">
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-color">Save</button>
                        <a href="@Url.Action("Index", "BranchUsers")" class="btn btn-color">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            ChangeInternalExternalView($('#is_active_directory_user').val());

            $('#is_active_directory_user').on('change', function () {
                ChangeInternalExternalView(this.value);
            });
        });

        function ChangeInternalExternalView(is_active_directory_user) {
            if (is_active_directory_user > 0)
                $("#passwordDiv").hide(150);
            else
                $("#passwordDiv").show(150);
        }
    </script>
}
