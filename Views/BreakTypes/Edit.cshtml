@model SQMS.Models.tblBreakType
@{
    ViewBag.Title = "Break Type Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Break Type > Edit</h4>
 
        <form asp-controller="BreakTypes" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="break_type_id" type="hidden" />

                <div class="form-group">
                    <label asp-for="break_type_short_name" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="break_type_short_name" class="form-control" />
                        <span asp-validation-for="break_type_short_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="break_type_name" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="break_type_name" class="form-control" />
                        <span asp-validation-for="break_type_name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="start_time" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="start_time" class="form-control" type="time" />
                        <span asp-validation-for="start_time" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="end_time" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="end_time" class="form-control" type="time" />
                        <span asp-validation-for="end_time" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="duration" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="duration" class="form-control" />
                        <span asp-validation-for="duration" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Save" class="btn btn-color" />
                        <button class="btn btn-color">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        </form>        
    </div>
</div>

