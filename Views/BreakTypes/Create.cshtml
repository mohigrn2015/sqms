@model SQMS.Models.tblBreakType
@{
    ViewBag.Title = "Break Type Create";
}

<div class="container">
    <div class="row">

        <h4 class="page-head-line">Break Type > Create </h4>

        <div class="col-md-5">
            <form asp-controller="BreakTypes" asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <div class="col-md-8">
                            <input asp-for="break_type_short_name" class="form-control" placeholder="Short Name" />
                            <span asp-validation-for="break_type_short_name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8">
                            <input asp-for="break_type_name" class="form-control" placeholder="Full Name" />
                            <span asp-validation-for="break_type_name" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-8">
                            <input asp-for="start_time" class="form-control" type="time" />
                            <span asp-validation-for="start_time" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8">
                            <input asp-for="end_time" class="form-control" type="time" />
                            <span asp-validation-for="end_time" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8">
                            <input asp-for="duration" class="form-control" placeholder="Duration (Minutes)" />
                            <span asp-validation-for="duration" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-8">
                            <input type="submit" value="Create" class="btn btn-color" />
                            <button class="btn btn-color">
                                @Html.ActionLink("Back to List", "Index")
                            </button>
                        </div>
                    </div>
                </div>
            </form>                
        </div>
    </div>

</div>